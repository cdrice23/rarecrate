generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

enum Role {
  SUPERADMIN
  USER
}

model User {
  id            String   @id @default(cuid())
  email         String?  @unique
  emailVerified Boolean?
  role          Role     @default(USER)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
